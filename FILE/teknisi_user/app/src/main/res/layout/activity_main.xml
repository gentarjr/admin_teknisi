<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.skripsi.teknisi_user.MainActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="630dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@mipmap/user"
            android:onClick="Edit_profile"/>

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="SELAMAT DATANG"
            android:textSize="18dip"
            android:textStyle="bold" />

        <View
            android:id="@+id/View1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#448AFF" />

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="USERNAME"
            android:textSize="18dip"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_laporan_kerja"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#448AFF"
            android:onClick="Laporan_pekerjaan"
            android:text="LAPORAN PEKERJAAN"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_history_laporan"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#448AFF"
            android:onClick="History_laporan"
            android:text="CEK HISTORI LAPORAN"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_jadwal_piket"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#448AFF"
            android:onClick="Jadwal_piket"
            android:text="CEK JADWAL PIKET"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_kinerja_teknisi"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#448AFF"
            android:onClick="Kinerja_teknisi"
            android:text="CEK KINERJA TEKNISI"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:background="#FF4444"
            android:text="Logout"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
