<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="666dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_teknisi"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="TEKNISI"
            android:inputType="textEmailAddress"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txt_nip"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="NIP"
            android:inputType="textEmailAddress"
            android:singleLine="true" />

        <EditText
            android:id="@+id/tanggal_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:hint="TANGGAL KEGIATAN" />

        <Button
            android:id="@+id/btn_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/in_date"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/in_date"
            android:layout_toRightOf="@+id/in_date"
            android:text="PILIH TANGGAL" />

        <RadioGroup
            android:id="@+id/grup_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" >

            <RadioButton
                android:id="@+id/maintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAINTENANCE"/>


            <RadioButton
                android:id="@+id/perbaikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERBAIKAN"/>


            <RadioButton
                android:id="@+id/dll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DLL"/>

            <RadioButton
                android:id="@+id/cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CASH"/>

            <RadioButton
                android:id="@+id/reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REJECT"/>
        </RadioGroup>

        <!--<Spinner
            android:id="@+id/nama_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#448AFF"
            android:entries="@array/nama_kegiatan"
            android:prompt="@string/pilih_nama"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textStyle="bold" />-->

        <EditText
            android:id="@+id/waktu_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/in_date"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:hint="WAKTU KEGIATAN" />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_date"
            android:layout_alignStart="@+id/btn_date"
            android:layout_alignLeft="@+id/btn_date"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="WAKTU KEGIATAN" />

        <RadioGroup
            android:id="@+id/grup_kode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" >

            <RadioButton
                android:id="@+id/a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A1-FLM"/>


            <RadioButton
                android:id="@+id/a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A2-REJECT CARD"/>


            <RadioButton
                android:id="@+id/a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A3-INSTALASI"/>

            <RadioButton
                android:id="@+id/a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A4-SETTINGS"/>

            <RadioButton
                android:id="@+id/a5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A5-CARTRIDGE"/>
        </RadioGroup>

        <Button
            android:id="@+id/btn_simpan_kegiatan"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#448AFF"
            android:onClick="Laporan_pekerjaan"
            android:text="SIMPAN DATA KEGIATAN"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
